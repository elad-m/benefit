<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".items_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#adadad"
            app:layout_constraintTop_toBottomOf="@id/search_icon">
        </View>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintDimensionRatio="3:1"
            android:layout_gravity="center"
            android:background="@drawable/ic_benefit_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <Button
            android:id="@+id/give_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintDimensionRatio="1:1.3"
            android:layout_gravity="center"
            android:background="@drawable/ic_give_icon"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/message_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <RelativeLayout
            android:id="@+id/search_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1.1"
            app:layout_constraintRight_toLeftOf="@id/user_icon"
            app:layout_constraintLeft_toRightOf="@id/sandwich_icon"
            app:layout_constraintTop_toTopOf="@id/sandwich_icon"
            app:layout_constraintBottom_toBottomOf="@id/user_icon"
            app:layout_constraintHorizontal_chainStyle="spread">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_search_icon_color"                    />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#0188b2"/>

        </RelativeLayout>

        <Button
            android:id="@+id/sandwich_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="2dp"
            android:background="@drawable/ic_sandwich_icon"
            app:layout_constraintRight_toLeftOf="@id/search_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/message_icon"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <Button
            android:id="@+id/user_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="2dp"
            android:background="@drawable/ic_user_icon"
            app:layout_constraintTop_toTopOf="@id/message_icon"
            app:layout_constraintRight_toLeftOf="@id/notification_icon"
            app:layout_constraintLeft_toRightOf="@id/search_icon"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <Button
            android:id="@+id/message_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="2dp"
            android:background="@drawable/ic_message_icon"
            app:layout_constraintRight_toLeftOf="@+id/give_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/notification_icon"
            app:layout_constraintHorizontal_chainStyle="spread"
            />

        <Button
            android:id="@+id/notification_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="2dp"
            android:background="@drawable/ic_notification_icon"
            app:layout_constraintTop_toTopOf="@id/message_icon"
            app:layout_constraintRight_toLeftOf="@id/message_icon"
            app:layout_constraintLeft_toRightOf="@id/user_icon"
            app:layout_constraintHorizontal_chainStyle="spread"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

